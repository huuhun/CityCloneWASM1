@page "/library"

<PageTitle>Thư Viện</PageTitle>

<style>
    .overlay-svg {
        position: absolute;
        top: 40%;
        left: 50%;
        transform: translate(-50%, -50%);
        pointer-events: none;
        /* Optional: Prevents the overlay from interfering with clicks */
    }
</style>

<div class="container">
    <div class="row mb-3">
        <div class="col-md">
            <div class="p-3">
                <img src="../res/images/thuvien/thuvien_stride.png" alt="Thu vien"
                    style="width: 350px; height: auto;" />
            </div>
        </div>
    </div>

    <div class="row mb-1">
        <div class="col-md-4">
            <div class="p-1 d-flex justify-content-center">
                <NavLink class="nav-link shadow-image-link" href="/res/pdf/file_sample.pdf" target="_blank">
                    <img src="../res/images/thuvien/brochure-du-an.png" alt="BLA" style="width: 340px; height: auto;" />
                    <p class="mt-2 text-center" style="font-size: medium;">Brochure Dự Án</p> <!-- Added text -->
                </NavLink>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-1 d-flex justify-content-center">
                <NavLink class="nav-link shadow-image-link" href="/res/pdf/file_sample1.pdf" target="_blank">
                    <img src="../res/images/thuvien/nha-tesla.png" alt="BLA"
                        style="width: 340px; height: auto; filter: grayscale(100%);" />
                    <p class="mt-2 text-center" style="font-size: medium;">Brochure Nhà Tesla</p> <!-- Added text -->
                </NavLink>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-1 d-flex justify-content-center">
                <NavLink class="nav-link shadow-image-link" href="/res/pdf/file_sample.pdf" target="_blank">
                    <img src="../res/images/thuvien/nha-cantata.png" alt="BLA"
                        style="width: 340px; height: auto; filter: grayscale(100%);" />
                    <p class="mt-2 text-center" style="font-size: medium;">Brochure Nhà Cantana</p> <!-- Added text -->
                </NavLink>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="p-1 d-flex justify-content-center">
                <NavLink class="nav-link">
                    <img src="../res/images/thuvien/nha-cantata-goc.png" alt="BLA"
                        style="width: 340px; height: auto; opacity: 0.5;   filter:grayscale(100%);" />
                    <p class="mt-2 text-center" style="font-size: medium;">Hình ảnh dự án</p> <!-- Added text -->
                </NavLink>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-1 d-flex justify-content-center">
                <NavLink class="nav-link shadow-image-link" href="/library/video"
                    style="position: relative; display: inline-block;">
                    <img src="../res/images/thuvien/nha-cantata.png" alt="BLA" style="width: 340px; height: auto;" />
                    <img class="overlay-svg" src="../res/images/nhamau/play_default.svg" alt="BLA" />
                    <p class="mt-2 text-center" style="font-size: medium;">Video</p> <!-- Added text -->
                </NavLink>

            </div>
        </div>
        <div class="col-md-4">
            <div class="p-1 d-flex justify-content-center">
                <NavLink class="nav-link shadow-image-link" href="/library/other">
                    <img src="../res/images/thuvien/tai-lieu-khac.png" alt="BLA" style="width: 340px; height: auto; " />
                    <p class="mt-2 text-center" style="font-size: medium;">Tài liệu khác</p> <!-- Added text -->
                </NavLink>
            </div>
        </div>
    </div>
</div>
@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
